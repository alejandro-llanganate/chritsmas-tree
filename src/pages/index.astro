<style>
    body {
        margin: 0;
        padding: 0;
        background: #000;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #000000, #0a0a0a);
        color: white;
        padding: 0;
        overflow: hidden;
        position: relative;
        font-family: "Poppins", sans-serif;
    }

    .intro-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #000000, #0a0a0a);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2000;
    }

    .intro-content {
        background: rgba(255, 255, 255, 0.05);
        padding: 2.5rem;
        border-radius: 20px;
        max-width: 600px;
        margin: 1rem;
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.1);
        border: 1px solid rgba(255, 215, 0, 0.1);
        animation: fadeIn 1s ease-out;
    }

    .intro-title {
        font-family: "Mountains of Christmas", cursive;
        color: #ffd700;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
    }

    .intro-text {
        color: #fff;
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        text-align: center;
    }

    .start-button {
        background: linear-gradient(45deg, #ffd700, #ff8c00);
        border: none;
        padding: 1rem 2rem;
        color: white;
        border-radius: 50px;
        font-size: 1.1rem;
        cursor: pointer;
        display: block;
        margin: 2rem auto 0;
        transition: all 0.3s ease;
        font-family: "Poppins", sans-serif;
    }

    .start-button:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
    }

    .hidden {
        display: none !important;
    }

    .christmas-tree {
        position: relative;
        height: 70vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 2rem 0;
        animation: treeEntrance 1s ease-out;
    }

    .star {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: starTwinkle 2s infinite;
        z-index: 2;
        filter: drop-shadow(0 0 15px gold);
    }

    .tree-body {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .tree-section {
        width: 0;
        height: 0;
        border-left: 150px solid transparent;
        border-right: 150px solid transparent;
        border-bottom: 160px solid #0f5132;
        margin-top: -80px;
        position: relative;
        filter: drop-shadow(0 0 10px rgba(15, 81, 50, 0.5));
    }

    .tree-section:nth-child(2) {
        transform: scale(0.85);
    }
    .tree-section:nth-child(3) {
        transform: scale(0.7);
    }
    .tree-section:nth-child(4) {
        transform: scale(0.55);
    }

    .ornaments {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
    }

    .ornament {
        position: absolute;
        font-size: 1.5rem;
        animation: float 3s ease-in-out infinite;
    }

    .ornament:nth-child(1) {
        top: 20%;
        left: 30%;
        animation-delay: 0s;
    }
    .ornament:nth-child(2) {
        top: 40%;
        right: 25%;
        animation-delay: 0.5s;
    }
    .ornament:nth-child(3) {
        top: 60%;
        left: 35%;
        animation-delay: 1s;
    }
    .ornament:nth-child(4) {
        top: 30%;
        right: 35%;
        animation-delay: 1.5s;
    }
    .ornament:nth-child(5) {
        top: 50%;
        left: 25%;
        animation-delay: 2s;
    }

    .lights {
        position: absolute;
        top: 0;
        left: -150px;
        right: -150px;
        bottom: 0;
        background:
            radial-gradient(circle at center, #fff 1px, transparent 1px) 0 0 /
                30px 30px,
            radial-gradient(circle at center, #ffeb3b 1px, transparent 1px) 15px
                15px / 30px 30px;
        animation: twinkle 1.5s ease-in-out infinite alternate;
        opacity: 0.5;
    }

    .trunk {
        width: 40px;
        height: 80px;
        background: linear-gradient(45deg, #8b4513, #a0522d);
        margin-top: -40px;
        border-radius: 5px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .gifts-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        margin-top: -3rem;
        padding: 0 1rem;
        max-width: 600px;
        position: relative;
        z-index: 2;
    }

    .gift {
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 0 1 calc(33.333% - 1rem);
        min-width: 80px;
        background: rgba(255, 255, 255, 0.05);
        padding: 1rem;
        border-radius: 10px;
        border: 1px solid rgba(255, 215, 0, 0.1);
    }

    .gift:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(255, 215, 0, 0.2);
    }

    .gift-box {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    @keyframes twinkle {
        0% {
            opacity: 0.3;
        }
        100% {
            opacity: 0.6;
        }
    }

    @keyframes starTwinkle {
        0%,
        100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.8;
        }
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 3000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .modal.active {
        opacity: 1;
        visibility: visible;
    }

    .modal-content {
        background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
        padding: 2.5rem;
        border-radius: 20px;
        max-width: 600px;
        width: 90%;
        margin: 1rem;
        position: relative;
        transform: translateY(20px);
        opacity: 0;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 215, 0, 0.1);
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.1);
    }

    .modal.active .modal-content {
        transform: translateY(0);
        opacity: 1;
    }

    .modal-title {
        font-family: "Mountains of Christmas", cursive;
        color: #ffd700;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 1.5rem;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
    }

    .modal-body {
        color: #fff;
        line-height: 1.8;
        font-size: 1.1rem;
        text-align: center;
        margin-top: 1.5rem;
    }

    .close-button {
        position: absolute;
        right: 1.5rem;
        top: 1rem;
        font-size: 2rem;
        color: #ffd700;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .close-button:hover {
        transform: scale(1.1);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .modal-text {
        color: #fff;
        line-height: 1.8;
        font-size: 1.1rem;
        text-align: center;
        margin-top: 0;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const introModal = document.getElementById("intro-modal");
        const mainContent = document.getElementById("main-content");
        const startButton = document.getElementById("start-journey");
        const modal = document.getElementById("gift-modal");
        const modalTitle = modal.querySelector(".modal-title");
        const modalBody = modal.querySelector(".modal-body");
        const closeButton = modal.querySelector(".close-button");
        const gifts = document.querySelectorAll(".gift");

        // Contenido de los regalos
        const giftContents = {
            spirituality: {
                title: "Espiritualidad üôè",
                content: "Quiero que vayamos juntos al Santuario Se√±or de la Justicia de la Parroquia San Sebasti√°n y oremos juntos, el 19 de enero me gustar√≠a."
            },
            health: {
                title: "Salud y Bienestar üíÜ‚Äç‚ôÄÔ∏è",
                content: "Quiero llevarte al El Refugio Spa Garden entre las fechas del 18 al 19 de febrero. La salud es importante y siento que un SPA ayuda mucho tambi√©n al cuerpo y has tenido un a√±o con mucho ejercicio y quiero cuidarlo."
            },
            social: {
                title: "Ayuda Social üêï",
                content: "Te propongo la primera semana de marzo poder hacer lo que hicimos de los perritos pero para el doble de perros, es decir no una funda de alimentos sino dos."
            },
            recreation: {
                title: "Recreaci√≥n üè∞",
                content: "Quiero llevarte a Cuenca y conocer m√°s de tu historia all√° y tener 24 horas solo para conocer nuevos lugares y luego hacer un album de fotos con todo lo que hayamos recorrido. Esto te propongo en la tercer o cuarta semana de Abril."
            },
            physical: {
                title: "F√≠sico üè°",
                content: "Quiero que vayamos a un airbnb que ambos escojamos fuera de quito, esa es la √∫nica condici√≥n y que podamos cumplir al menos tres fetiches tuyos."
            },
            love: {
                title: "Amor üíù",
                content: "Este mes he investigado bastante pero bastante y el √∫nico lugar para ver las auroras boreales es en Canad√° en Monta√±as Rocosas, ya vi costos s√© que me tengo que esforzar bastante pero quiero llevarte all√°."
            }
        };

        // Inicializar vista
        mainContent.classList.add("hidden");

        // Manejador del bot√≥n de inicio
        startButton.addEventListener("click", () => {
            introModal.style.display = "none";
            mainContent.classList.remove("hidden");
        });

        // Funci√≥n para abrir modal
        function openModal(giftType) {
            const content = giftContents[giftType];
            if (content) {
                modalTitle.textContent = content.title;
                modalBody.innerHTML = `
                    <p class="modal-text">${content.content}</p>
                `;
                modal.classList.remove("hidden");
                setTimeout(() => {
                    modal.classList.add("active");
                }, 10);
            }
        }

        // Funci√≥n para cerrar modal
        function closeModal() {
            modal.classList.remove("active");
            setTimeout(() => {
                modal.classList.add("hidden");
            }, 300);
        }

        // Agregar event listeners
        gifts.forEach((gift) => {
            gift.addEventListener("click", () => {
                const giftType = gift.getAttribute("data-gift");
                openModal(giftType);
            });
        });

        closeButton.addEventListener("click", closeModal);
        modal.addEventListener("click", (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });
    });
</script>
